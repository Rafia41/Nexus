@model NEXUS.Models.PackagePlan
@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">ADD-PACKAGES</h6>
                <form enctype="multipart/form-data" asp-controller="Admin" asp-action="EditPackage2">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <input type="hidden" asp-for="PackId" class="form-control" id="exampleFormControlInput1">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Name</label>
                        <input type="text" class="form-control" asp-for="PackName">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Description</label>
                        <input type="text" class="form-control" asp-for="PackDesc">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Price</label>
                        <input type="number" class="form-control" asp-for="PackPrice">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Package Validity</label>
                        <input type="text" class="form-control" asp-for="PackValidity">
                    </div>

                    <select class="form-select mb-2" asp-for="PackageId" asp-items="ViewBag.Package" aria-label="Default select example">
                        <option selected>Select Package Plan</option>
                    </select>

                    <button type="submit" class="btn btn-success mt-2">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div>