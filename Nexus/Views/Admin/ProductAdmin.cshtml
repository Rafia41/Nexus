
@model NEXUS.Models.Product
@{
    Layout = "_LayoutAdmin";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">ADD-PRODUCT</h6>
                <form enctype="multipart/form-data" asp-controller="Admin" asp-action="AddProduct">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Name</label>
                        <input type="text" class="form-control" asp-for="ProdName">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Description</label>
                        <input type="text" class="form-control" asp-for="ProdDesc">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Image</label>
                        <input type="file" class="form-control" asp-for="ProdImage">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Product Price</label>
                        <input type="number" class="form-control" asp-for="ProdPrice">
                    </div>
                    <select class="form-select mb-2" asp-for="ProdCatgId" asp-items="ViewBag.Category"  aria-label="Default select example">
                        <option selected>Select Category</option>
                    </select>
                    <button type="submit" class="btn btn-success mt-2">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
</div> 


