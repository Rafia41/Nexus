@model NEXUS.Models.Upgrade

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-white mb-4 animated slideInDown" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Plans</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary" aria-current="page">Order</li>
            </ol>
        </nav>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center" data-aos="fade-up" data-aos-duration="1000">
                <span class="subheading">Plan Details</span>
                <span class="fs-2 fw-bold">Upgrade Your Plan</span>
                <p>
                    Maintain detailed descriptions of each plan, including the type of connection, validity period, and associated charges.
                    Here's a breakdown of the various plan details:
                </p>
            </div>
        </div>
        
</section>

<form action="/subscription/update" method="post">
    <label for="subscription">Current Subscription Plan:</label>
    <select class="form-select mb-2" asp-for="UpgradeId" asp-items="ViewBag.Upgrade1" aria-label="Default select example">
        <option selected>Select Package</option>
    </select>
    <br />

    <label for="newPlan">Select New Plan:</label>
    <select class="form-select mb-2" asp-for="UpgradeId" asp-items="ViewBag.Upgrade2" aria-label="Default select example">
        <option selected>Select Package</option>
    </select>
    <br />

    <a asp-controller="Home" asp-action="Customer" class="btn btn-primary m-auto d-flex justify-content-center px-2 py-3 w-25 mt-3">Upgrade</a>
</form>


