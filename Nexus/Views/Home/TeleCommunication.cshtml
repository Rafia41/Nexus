@model IEnumerable<NEXUS.Models.TeleService>

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-white mb-4 animated slideInDown" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Services</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary" aria-current="page">Services</li>
            </ol>
        </nav>
    </div>
</div>


<div class="container-fluid ">
    <div class="row justify-content-center">


        <p class="fs-5 m-3 mb-2 p-3" style="text-align:center;">
            Our mission is to keep you connected with your loved ones, colleagues, and the world around you, wherever you are. <br /> We provide reliable telecommunication services that meet your needs and exceed your expectations.

        <h1 class="animated slideInDown fw-bold mt-4" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Our Tele Services</h1>

        <div class="container-xl py-4">
            <div class="container">
                <div class="row g-0 feature-row">
                        @foreach (var TeleService in Model)
                        {
                    <div class="col-md-6 col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="feature-item border h-100 p-5">

                            <h5 class="mb-3 text-center fs-3">@TeleService.TeleName</h5>

                        </div>
                    </div>
                                }
                </div>
                 <a asp-controller="Home" asp-action="Customer" class="btn btn-primary m-auto d-flex justify-content-center px-2 py-3 w-25 mt-3">Get Your Service</a>
            </div>
        </div>

    </div>
</div>